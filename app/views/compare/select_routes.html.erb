<%= form_tag '/compare/result', method: :get do %>

<table>
	<tr>
		<td>Stop1: <%= @stop1 %></td>
		<td>Stop2: <%= @stop2 %></td>
	</tr>
	<tr>
		<td>
			<table>
				<tr>
					<td></td>
					<td>Route</td>
					<td>Direction</td>
				</tr>
				<% @routes1.each do |route| %>
				<tr>
					<td><%= radio_button_tag :route1, route %></td>
					<td><%= route[:no] %></td>
					<td><%= route[:direction] %></td>
				</tr>
				<% end %>
			</table>
		</td>
		<td>
			<table>
				<tr>
					<td></td>
					<td>Route</td>
					<td>Direction</td>
				</tr>
				<% @routes2.each do |route| %>
				<tr>
					<td><%= radio_button_tag :route2, route %></td>
					<td><%= route[:no] %></td>
					<td><%= route[:direction] %></td>
				</tr>
				<% end %>
			</table>
		</td>
	</tr>
</table>

<%= submit_tag 'Go' %>

<% end %>