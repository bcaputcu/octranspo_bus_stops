<div class="page-header">
	<h1>Favorites</h1>
</div>
<div class="span8">
	<table class="table table-bordered" id="user_favorites_table">
		<thead>
			<tr>
				<th></th>
				<th>Stop</th>
				<th>Route</th>
				<th>Display</th>
			</tr>
		</thead>
		<tbody>
			<% @favorites.each do |fav| %>
			<tr>
				<td style="width: 36px;"><%= favorite_button fav.stop_time %></td>
				<td><%= fav.stop.full_name %></td>
				<td><%= fav.route.full_name %></td>
				<td style="width: 113px;"><%= link_to "<i class='icon-map-marker'></i> Show on Map".html_safe, {controller: "compare", action: "result", :"routes[]" => "#{fav.stop.id}, #{fav.route.id}"}, class: "btn btn-small" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>